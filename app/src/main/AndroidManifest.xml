<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.example.cyrille.scanText"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.cyrille.scanText.MainActivity"
            android:configChanges="orientation|screenSize|layoutDirection"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cyrille.scanText.EditTextActivity"
            android:label="@string/title_activity_edit_text"
            android:parentActivityName="com.example.cyrille.scanText.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cyrille.scanText.MainActivity"/>
        </activity>
    </application>

</manifest>
